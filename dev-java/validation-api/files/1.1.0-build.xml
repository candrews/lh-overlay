<?xml version="1.0" standalone="yes"?>
<project basedir="." default="jar" name="validation-api">
	<property name="src.dir" value="src/main/java/" />
	<property name="test.src.dir" value="src/test/java" />
	<property name="classes.dir" value="bin" />
	<property name="classes.dir.test" value="test-bin" />
	<property name="reports.tests" value="testreports" />
	<property name="test.resources.dir" value="src/test/resources" />

	<target name="compile">
		<mkdir dir="bin" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}">
			<include name="**/*.java" />
		</javac>
	</target>

	<target name="jar" depends="compile">
		<jar destfile="${ant.project.name}.jar">
			<zipfileset dir="${classes.dir}" />
		</jar>
	</target>

	<target name="javadoc">
		<javadoc sourcepath="${src.dir}" packagenames="*" destdir="apidocs" />
	</target>

	<target name="compile-tests">
		<mkdir dir="${classes.dir.test}" />
		<javac destdir="${classes.dir.test}" nowarn="false" debug="true" optimize="true" deprecation="false" target="1.5" verbose="false" fork="false" source="1.5">
			<src path="${test.src.dir}" />

			<classpath>
				<pathelement location="${classes.dir}" />
			</classpath>
			
			<exclude name="**/javax/validation/examples/**" />
		</javac>

		<copy todir="${classes.dir.test}" verbose="true">
			<fileset dir="${test.resources.dir}"/>
		</copy>
	</target>

	<target name="test" depends="compile-tests, jar">
		<mkdir dir="${reports.tests}" />

		<taskdef resource="testngtasks" />

		<testng outputDir="${reports.tests}" classpath="${gentoo.classpath}:${classes.dir.test}:${ant.project.name}.jar" haltOnFailure="true" verbose="10" dumpCommand="true">
		    <classfileset dir="${classes.dir.test}" includes="**/*Test.class" excludes="**/*$*.class" />
		</testng>
	</target>
</project>
